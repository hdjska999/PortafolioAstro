		<!-- 
			SCRIPT PRINCIPAL
			Este script maneja las animaciones y efectos visuales del sitio
		-->
		<script is:inline>
			/**
			 * Inicialización cuando el DOM está completamente cargado
			 * Este evento se dispara cuando la estructura HTML está lista
			 */
			document.addEventListener('DOMContentLoaded', () => {
				// Definición de colores para las partículas decorativas
				const colors = ['#3ad29f', '#ff6b6b', '#4e54c8', '#ffd166', '#83C5BE'];
				
				// Obtener el contenedor donde se crearán las partículas
				const particlesContainer = document.getElementById('particles-container');
				
				// Cantidad de partículas a generar
				const particleCount = 50;
				
				/**
				 * GENERACIÓN DE PARTÍCULAS
				 * Crea elementos div para cada partícula y los configura con estilos aleatorios
				 */
				if (particlesContainer) {
					for (let i = 0; i < particleCount; i++) {
						// Crear un nuevo elemento div para cada partícula
						const particle = document.createElement('div');
						particle.classList.add('particle');
						
						// Asignar un tamaño aleatorio entre 5px y 15px
						const size = Math.random() * 10 + 5;
						particle.style.width = `${size}px`;
						particle.style.height = `${size}px`;
						
						// Posicionar aleatoriamente en el contenedor (en porcentajes)
						const xPos = Math.random() * 100;
						const yPos = Math.random() * 100;
						particle.style.left = `${xPos}%`;
						particle.style.top = `${yPos}%`;
						
						// Asignar un color aleatorio de la paleta definida
						const colorIndex = Math.floor(Math.random() * colors.length);
						particle.style.backgroundColor = colors[colorIndex];
						
						// Aplicar la animación con duración aleatoria entre 5 y 15 segundos
						particle.style.animation = `float ${5 + Math.random() * 10}s infinite`;
						
						// Añadir la partícula al contenedor
						particlesContainer.appendChild(particle);
					}
				}
				
				/**
				 * ANIMACIÓN DE SCROLL EN ESPIRAL
				 * Configura las secciones para animarse cuando entran en el viewport
				 */
				
				// Seleccionar todas las secciones del documento
				const sections = document.querySelectorAll('section');
				
				// Añadir la clase base para animación a cada sección
				sections.forEach(section => {
					section.classList.add('section-animated');
				});
				
				/**
				 * Configurar el Intersection Observer
				 * Este API observa cuando elementos entran/salen del viewport
				 */
				const observer = new IntersectionObserver((entries) => {
					// Por cada entrada (sección) que cambia de estado visible/no visible
					entries.forEach(entry => {
						if (entry.isIntersecting) {
							// Si la sección está en el viewport, añadir clase visible
							entry.target.classList.add('visible');
						} else {
							// Si la sección sale del viewport, quitar clase visible
							entry.target.classList.remove('visible');
						}
					});
				}, { threshold: 0.1 }); // Umbral: activar cuando al menos el 10% de la sección es visible
				
				// Comenzar a observar cada sección
				sections.forEach(section => {
					observer.observe(section);
				});
			});
